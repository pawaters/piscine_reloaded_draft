#include <stdlib.h>

int	ft_strlen(char *str);
{
	int len;

	len = 0;
	while (str[len] != '\0')
		len++;
	return (len);
}

char	*ft_strdup(char *src)
{
	int i;
	char *dest;

	i = 0;
	dest = malloc (ft_strlen(src) * sizeof(char));
	while (src[i] != '\0')
	{	
		dest[i] = src[i];
		i++;
	}
	dest[i] = '\0';
	return (dest);
}

